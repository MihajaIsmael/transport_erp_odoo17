<!-- transport_route/views/route_views.xml -->
<odoo>
  <record id="view_transport_route_tree" model="ir.ui.view">
    <field name="name">transport.route.tree</field>
    <field name="model">transport.route</field>
    <field name="arch" type="xml">
      <tree>
        <field name="code"/>
        <field name="name"/>
        <field name="origin"/>
        <field name="destination"/>
        <field name="distance_km"/>
        <field name="estimated_duration_min"/>
        <field name="active"/>
      </tree>
    </field>
  </record>

  <record id="view_transport_route_form" model="ir.ui.view">
    <field name="name">transport.route.form</field>
    <field name="model">transport.route</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <header>
            <field name="active" widget="boolean_toggle"/>
          </header>

          <div class="oe_title">
            <h1>
              <field name="name" placeholder="Ex: Tana â†’ Tamatave"/>
            </h1>
            <div>
              <field name="code" readonly="1"/>
            </div>
          </div>

          <group>
            <group>
              <field name="origin"/>
              <field name="destination"/>
            </group>
            <group>
              <field name="distance_km"/>
              <field name="estimated_duration_min"/>
            </group>
          </group>

          <notebook>
            <page string="Stops">
              <field name="stop_ids">
                <tree editable="bottom">
                  <field name="sequence"/>
                  <field name="name"/>
                  <field name="distance_from_origin_km"/>
                  <field name="stop_duration_min"/>
                </tree>
              </field>
            </page>
            <page string="Notes">
              <field name="note"/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_transport_route" model="ir.actions.act_window">
    <field name="name">Routes</field>
    <field name="res_model">transport.route</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>